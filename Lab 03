#Step 1: Import Libraries
import pandas as pd
from sklearn.datasets import load_iris
from sklearn.preprocessing import LabelEncoder, StandardScaler

#Step 2: Load Dataset
iris = load_iris(as_frame=True)
data = iris.frame  #Convert to DataFrame

#Show first 5 rows of dataset
print("First 5 rows of dataset:\n", data.head(), "\n")

#Shape tells us how many rows and columns are there
print("Shape:", data.shape, "\n")

#Check missing values
print("Missing values:\n", data.isnull().sum(), "\n")

#Step 3: Feature Selection
data = data[['sepal length (cm)', 'sepal width (cm)', 'target']]
#Step 4: Feature Extraction
data.loc[:, 'sepal_ratio'] = data['sepal length (cm)'] / data['sepal width (cm)']
#Step 5: Encoding
encoder = LabelEncoder()
data.loc[:, 'target'] = encoder.fit_transform(data['target'])
#Step 6: Scaling numerical features
scaler = StandardScaler()
data.loc[:, ['sepal length (cm)', 'sepal width (cm)', 'sepal_ratio']] = scaler.fit_transform(
    data[['sepal length (cm)', 'sepal width (cm)', 'sepal_ratio']]
#Step 7: Final Ouput
print("Final Processed Data:\n", data.head())
